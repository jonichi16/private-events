<h2 class="container page-title">Sign up</h2>

<div class="container form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  
    <div class="field">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-title" %>
      <% resource.errors.full_messages_for(:email).each do |msg| %>
        <div class="error-explanation">* <%= msg %> </div>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :first_name, class: "form-label" %>
      <%= f.text_field :first_name, class: "form-title" %>
      <% resource.errors.full_messages_for(:first_name).each do |msg| %>
        <div class="error-explanation">* <%= msg %> </div>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :last_name, class: "form-label" %>
      <%= f.text_field :last_name, class: "form-title" %>
      <% resource.errors.full_messages_for(:last_name).each do |msg| %>
        <div class="error-explanation">* <%= msg %> </div>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :username, class: "form-label" %>
      <%= f.text_field :username, class: "form-title" %>
      <% resource.errors.full_messages_for(:username).each do |msg| %>
        <div class="error-explanation">* <%= msg %> </div>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-title" %>
      <% resource.errors.full_messages_for(:password).each do |msg| %>
        <div class="error-explanation">* <%= msg %> </div>
      <% end %>
    </div>
  
    <div class="field">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-title" %>
    </div>
    <br>
  
    <div class="actions">
      <%= f.submit "Sign up", class: "btn" %>
    </div>
  <% end %>
  <br>
  
  <%= render "users/shared/links" %>
</div>

