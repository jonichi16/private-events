<p> <%= @user.first_name %> <%= @user.last_name %> </p>

<% if @user == current_user %>
  <%= link_to "Create Event", new_event_path %>
<% end %>

<%= button_to "Created Events", @user, method: :get %>
<%= button_to "Attending Events", @user, method: :get, params: { previous: "true" } %>

<% if params[:previous] == "true" %>
<p>List of Attending Events</p>
  <%= button_to "Upcoming Events", @user, method: :get, params: { date: "upcoming" } %>
  <%= button_to "Previous Events", @user, method: :get, params: { date: "previous" } %>

  <ul>
    <% if params[:date] == "upcoming" %>
      <% @user.attended_events.where("date_of_event > ?", Time.now).each do |event| %>
        <%= render 'events_list', event: event %>
      <% end %>
    <% else %>
      <% @user.attended_events.where("date_of_event < ?", Time.now).each do |event| %>
        <%= render 'events_list', event: event %>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>List of Created Events</p>

  <ul>
    <% @user.created_events.each do |event| %>
      <%= render 'events_list', event: event %>
    <% end %>
  </ul>
<% end %>
