<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Gajraj+One&family=Pacifico&family=Roboto:wght@100;400;700&display=swap" rel="stylesheet">

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header>
      <nav class="navbar">
        <%= render "layouts/header" %>
      </nav>
    </header>

    <main>
      <div class="messages">
        <% if notice.present? %>
          <p class="notice"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
          <p class="alert"><%= alert %></p>
        <% end %>
      </div>
      <%= yield %>
    </main>

    <script>
      function dropdownClick() {
        document.getElementById("dropdown-list").classList.toggle("show");
      }

      window.onclick = function(e) {
        if (!e.target.matches('.dropbtn')) {
          let myDropdown = document.getElementById("dropdown-list");
            if (myDropdown.classList.contains('show')) {
              myDropdown.classList.remove('show');
            }
        }
      }

    </script>
  </body>
</html>
