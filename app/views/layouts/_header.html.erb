<div class="nav-container">
  <p><%= link_to "Private Events", root_path, class: "logo" %></p>
  
  <div class="main-nav">
    <div class="dropdown" onclick="dropdownClick()">
      <div class="dropbtn">
        <%= image_tag("dots-vertical.svg", alt: "dropdown", class: "dropimg dropbtn") %>
      </div>
      <div class="dropdown-list" id="dropdown-list">
        <%= link_to "Upcoming Events", root_path, class: "nav-link" %>
        <hr width="100%">
        <%= link_to "Previous Events", root_path(previous: "true"), class: "nav-link" %>
      </div>
    </div>
    
    <% if user_signed_in? %>
      <p><%= link_to current_user.username, current_user, class: "user-link nav-link" %> </p>
      <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "user-link nav-link" %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class: "user-link nav-link" %>
      <%= link_to "Sign Up", new_user_registration_path, class: "user-link nav-link" %>
    <% end %>
  </div>
</div>